{{#each news}}
    <div class="row">
        {{!--article--}}
        <div class="article">
            <h3><a href="{{link}}">{{title}}</a></h3>
            <p>{{body}}</p>
            <a class="detail-item">Via {{source}}</a>|
            <a class="detail-item" href="/article/{{_id}}">View {{comments.length}} Comments</a>
        </div>
    </div>
{{/each}}